                    "orderable": false
                },
                {
                    "targets": [2],
                    "searchable": false,
                    "orderable": false
                },
                {
                    "targets": [3],
                    data: "Datetime",
                    render: function (d) {
                        return moment(d).format("DD/MM/YYYY");
                    }
                }],

            "columns": [

                { "data": "ID" },
                { "data": "CityName" },
                { "data": "CountryName" },
                { "data": "CreatedDate" },

